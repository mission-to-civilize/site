---
const { frontmatter } = Astro.props
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{frontmatter.title}</title>

    <style is:global>
      body > * {
        margin: 0 auto;
        max-width: 640px;
        padding: 1em;
        font-family: monospace;
        font-size: 16px;
      }

      h1 {
        text-align: center;
        font-size: 2rem;
        margin-top: 4rem;
      }

      p {
        font-size: 1rem;
        line-height: 1.5;
      }

      a {
        display: inline-block;
        color: white;
        background-color: black;
        padding: 0.5em 1em;
        text-decoration: none;
        border-radius: 4px;
      }

      a:hover {
        background-color: #555;
        transition: background-color 0.3s ease-in-out;
      }
    </style>

    <!-- Privacy-friendly analytics by Plausible -->
    <script async src="https://plausible.io/js/pa-a0gF4Y2PtBko3ZskpbUEn.js"
    ></script>
    <script>
      ;(window.plausible =
        window.plausible ||
        function () {
          ;(plausible.q = plausible.q || []).push(arguments)
        }),
        (plausible.init =
          plausible.init ||
          function (i) {
            plausible.o = i || {}
          })
      plausible.init()
    </script>
  </head>
  <body>
    <slot />
  </body>
</html>
